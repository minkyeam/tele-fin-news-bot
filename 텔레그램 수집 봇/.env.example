# ─── Telegram API (메시지 수집용) ────────────────────────────────────────────
# https://my.telegram.org/apps 에서 발급
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=          # e.g. +821012345678

# ─── Telegram Bot (결과 전송용) ───────────────────────────────────────────────
# 1) @BotFather → /newbot → 토큰 발급
# 2) 결과를 받을 채팅: 개인 DM이면 숫자 ID, 채널이면 @채널명
TELEGRAM_BOT_TOKEN=
TELEGRAM_TARGET_CHAT=    # e.g. 123456789  또는  @my_signal_channel

# ─── OpenAI ─────────────────────────────────────────────────────────────────
OPENAI_API_KEY=

# ─── Pipeline 파라미터 ────────────────────────────────────────────────────────
# Authority Score 가중치
AUTHORITY_W1=0.7          # 구독자 규모 (log scale)
AUTHORITY_W2=0.3          # 조회수 비율 (engagement)

# 수집 시간 범위 (시간 단위)
COLLECT_HOURS=24

# 클러스터링 대상: Authority Score 상위 N%
CLUSTER_TOP_PERCENT=20

# DBSCAN 파라미터
DBSCAN_EPS=0.3
DBSCAN_MIN_SAMPLES=2

# 데이터베이스 경로
DB_PATH=tmsa.db

# 수집 대상 채널 목록 (쉼표 구분, @ 없이 입력)
# 예: CHANNEL_LIST=coindesk,theblock,lookonchain
CHANNEL_LIST=
